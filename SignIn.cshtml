
@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/generallayout.cshtml";
}
<div class="text-center"><h2>Sign<b class="text-warning">In</b></h2></div>
<div class="container  ">
    <div class="row p-3 " style="min-height:500px;">
        <div class="col-sm-9 bg-light  border border-light border-2 mx-auto p-3" style="min-height: 350px;box-shadow:2px 2px 10px 5px white ;border-radius: 10px 10px 10px 10px">

            <div class="row">
                <div class="col-sm-5" style="height:400px">
                    <img src="~/Content/img/download-_1_.jpg" style="height:430px;width:100%" />


                </div>

                <div class="col-sm-5 px-5 "><br /><br />

                    <form method="post" action="/home/signin">


                        <h4 class="text-center">USER <b class="text-warning">LOGIN</b> </h4>
                        <div class="form-group m-3">
                            <label>EMAIL ID</label>
                            <input type="text" class="form-control"  required  name="emailid" placeholder="Enter EMAIL ID" />

                        </div>
                        <div class="form-group m-3">
                            <label> PASSWORD</label>
                            <input type="password" class="form-control" required  name="password" placeholder="Enter your password" />

                        </div>
                        <input type="submit" class="btn btn-warning mt-3  " style="margin:0px 40%;width:30%"  value="Sign In" />

                    </form>

                </div>

            </div>

        </div>
    </div>

</div>

